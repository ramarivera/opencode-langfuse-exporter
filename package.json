{
  "name": "opencode-langfuse-exporter",
  "version": "0.1.0",
  "description": "Async Langfuse exporter for OpenCode sessions (no proxy)",
  "author": {
    "name": "Ramiro Rivera",
    "email": "ramarivera@example.com"
  },
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ramarivera/opencode-langfuse-exporter"
  },
  "keywords": [
    "opencode",
    "langfuse",
    "observability",
    "tracing",
    "llm",
    "plugin"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir ./dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.85",
    "effect": "^3.19.13",
    "langfuse": "^3.35.2",
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@opencode-ai/sdk": "^1.0.85",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "8.47.0",
    "@typescript-eslint/parser": "8.47.0",
    "bun-types": "latest",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^3.2.4"
  }
}
